{
  "family": "reeva-node-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::052104147455:role/AmazonECSTaskExecutionRolePolicy",
  "taskRoleArn": "arn:aws:iam::052104147455:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "reeva-web",
      "image": "REPLACED_BY_CODEPIPELINE",
      "portMappings": [{ "containerPort": 3001, "protocol": "tcp" }],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/reeva-node-task",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "web"
        }
      },
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "3001" }
      ]
    }
  ]
}
