<!DOCTYPE html>
<html lang="<%= userLang || 'es' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seleccionar Empresa</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/header.css" />
  <link rel="stylesheet" href="/css/seleccionar-empresa.css">
</head>
<body>
  
  <div class="seleccionar-container">
    <!-- Header -->
    <div class="header-seleccionar">
      <div>
        <h1>Selecciona una Empresa</h1>
        <p>Elige con cuál empresa deseas continuar</p>
      </div>
    </div>

    <!-- Grid de Empresas -->
    <div class="empresas-grid">
      <% if (empresas && empresas.length > 0) { %>
        <% empresas.forEach((empresa) => { %>
          <div class="empresa-card-selector" onclick="seleccionarEmpresa('<%= empresa.empresaId %>', '<%= empresa.nombre %>')">
            <div class="card-header">
              <div class="empresa-icon">
                <i class="fas fa-building"></i>
              </div>
              <div class="empresa-info">
                <h3><%= empresa.nombre %></h3>
                <p class="empresa-estructura">
                  <%= empresa.nombreNivel1 %> • <%= empresa.nombreNivel2 %>
                  <% if (empresa.nombreNivel3) { %>
                    • <%= empresa.nombreNivel3 %>
                  <% } %>
                  <% if (empresa.nombreNivel4) { %>
                    • <%= empresa.nombreNivel4 %>
                  <% } %>
                </p>
              </div>
              <div class="arrow-icon">
                <i class="ri-arrow-right-line"></i>
              </div>
            </div>

            <!-- Stats -->
            <div class="card-stats">
              <% if (empresa.espacios && empresa.espacios.length > 0) { %>
                <div class="stat">
                  <i class="fas fa-layer-group"></i>
                  <span><%= empresa.espacios.length %> <%= empresa.nombreNivel1 %></span>
                </div>
              <% } %>
              <% 
                let totalMesas = 0;
                if (empresa.espacios) {
                  empresa.espacios.forEach(e => {
                    totalMesas += (e.mesas ? e.mesas.length : 0);
                  });
                }
              %>
              <% if (totalMesas > 0) { %>
                <div class="stat">
                  <i class="fas fa-box"></i>
                  <span><%= totalMesas %> <%= empresa.nombreNivel2 %></span>
                </div>
              <% } %>
              <% if (empresa.ocupantes && empresa.ocupantes.length > 0) { %>
                <div class="stat">
                  <i class="fas fa-users"></i>
                  <span><%= empresa.ocupantes.length %> <%= empresa.nombreNivel3 %></span>
                </div>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } %>
    </div>
  </div>

  <!-- Loading Overlay -->
  <div id="loading-overlay" class="loading-overlay">
    <div class="loading-content">
      <div class="spinner"></div>
      <p>Cargando empresa...</p>
    </div>
  </div>

  <script>
    function seleccionarEmpresa(empresaId, nombreEmpresa) {
      const loadingOverlay = document.getElementById('loading-overlay');
      loadingOverlay.classList.add('active');

      fetch('/api/empresas/seleccionar', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ empresaId: empresaId })
      })
      .then(response => response.json())
      .then(result => {
        if (result.success) {
          setTimeout(() => {
            window.location.href = '/bienvenida?skip-select=1';
          }, 500);
        } else {
          alert('Error al seleccionar empresa: ' + result.message);
          loadingOverlay.classList.remove('active');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error al seleccionar empresa');
        loadingOverlay.classList.remove('active');
      });
    }
  </script>
</body>
</html>
