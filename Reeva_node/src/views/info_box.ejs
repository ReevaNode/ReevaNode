document.addEventListener('DOMContentLoaded', () => {
  const hoy = new Date();
  const inicioHoy = new Date(hoy);
  inicioHoy.setHours(0, 0, 0, 0);
  const finHoy = new Date(hoy);
  finHoy.setHours(23, 59, 59, 999);
  
  // Contar eventos que están en el rango de hoy
  const agendasHoy = eventos.filter(evento => {
    const inicio = new Date(evento.start);
    return inicio >= inicioHoy && inicio <= finHoy;
  }).length;
  
  const agendasElement = document.getElementById('agendasDelDia');
  if (agendasElement) {
    agendasElement.textContent = agendasHoy;
  }
});

